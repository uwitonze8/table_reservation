{
  "info": {
    "name": "Table Reservation API",
    "description": "API for managing restaurant table reservations.",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"firstName\":\"John\",\"lastName\":\"Doe\",\"email\":\"john.doe@example.com\",\"phone\":\"1234567890\",\"password\":\"password123\",\"confirmPassword\":\"password123\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"john.doe@example.com\",\"password\":\"password123\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Contact Us",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"firstName\":\"John\",\"lastName\":\"Doe\",\"email\":\"john.doe@example.com\",\"message\":\"Hello!\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/contact",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contact"]
            }
          }
        }
      ]
    },
    {
      "name": "Customer Endpoints",
      "item": [
        {
          "name": "Create Reservation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"numberOfGuests\":4,\"reservationDate\":\"2023-10-30\",\"reservationTime\":\"19:00\",\"specialRequests\":\"Window seat\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/reservations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reservations"]
            }
          }
        },
        {
          "name": "Get My Reservations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reservations/my",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reservations", "my"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Manage Reservations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/reservations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "reservations"]
            }
          }
        },
        {
          "name": "Manage Tables",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"tableNumber\":1,\"capacity\":4,\"location\":\"window\",\"shape\":\"rectangle\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/tables",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "tables"]
            }
          }
        }
      ]
    }
  ]
}